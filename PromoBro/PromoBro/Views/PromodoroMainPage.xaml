<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PromoBro.Views.PromodoroMainPage"
             Title="PromodoroMainPage"
             xmlns:vm="clr-namespace:PromoBro.Models.ViewModels"
             x:DataType="vm:PromodoroMainPageViewModel">
    <VerticalStackLayout>
        <Button x:Name="btnHistory" Clicked="btnHistory_Clicked" Text="History"></Button>
        <Button x:Name="btnTimer" Clicked="btnTimer_Clicked" Text="Start Timer"></Button>
        <Grid>
            <TableView>
                <TableSection>
                    <TextCell Text="{Binding RemainingTime}"></TextCell>
                    <TextCell Text="{Binding Description}"></TextCell>
                </TableSection>
            </TableView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>